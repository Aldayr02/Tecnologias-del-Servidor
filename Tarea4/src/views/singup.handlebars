<div class='form-container'>
  <h2 class='form-title'>Sign Up for Your Account</h2>
  <form class='signup-form'>
    <div class='input-group'>
      <label for='username'>Username</label>
      <input type='text' id='usernameInputSingup' name='username' required />
    </div>
    <div class='input-group'>
      <label for='email'>Email</label>
      <input type='email' id='emailInputSingup' name='email' required />
    </div>
    <div class='input-group'>
      <label for='password'>Password</label>
      <input type='password' id='passwordInputSingup' name='password' required />
    </div>
    <button type='submit' class='form-button' id='singUpSubmit'>Sign Up</button>
  </form>
</div>